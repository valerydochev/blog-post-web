<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<h3>Sign in</h3>

<form action="/admin" method="POST">
    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter your username" name="username">
      
    <label for="password"><b>Password</b></label>
    <div class="password-container">
        <input type="password" placeholder="Enter your password" name="password" id="signin-password">
        <span class="toggle-password" onclick="togglePassword('signin-password')">
            <i class="fa-solid fa-eye"></i>
        </span>
    </div>
      
    <input type="submit" value="Login" class="btn">
</form>

<h3>Register</h3>

<form action="/register" method="POST">
    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter your username" name="username">
      
    <label for="password"><b>Password</b></label>
    <div class="password-container">
        <input type="password" placeholder="Enter your password" name="password" id="register-password">
        <span class="toggle-password" onclick="togglePassword('register-password')">
            <i class="fa-solid fa-eye"></i>
        </span>
    </div>
      
    <input type="submit" value="Register" class="btn">
</form>
