<div class="author">
    <h1 class="author__heading">Daily Blog Pulse.</h1>
    <p class="author__body">Fresh Posts, Ideas, and Trends Delivered Every Day</p>
</div>
  
<img src="/img/man-791049_1280.jpg" alt="a girl and a boy who write a blog" class="hero-image" width="981" height="380">
  
<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
          
        <% data.forEach(post => { %>
         
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
          
        <% }) %>

    </ul>
    
     <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
     <% } %>

</section>